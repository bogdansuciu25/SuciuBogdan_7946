@model SuciuBogdan_7946.Models.Project


@{
    ViewData["Title"] = "Adauga Proiect";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panou Control</a></li>
        <li class="breadcrumb-item"><a asp-controller="Project" asp-action="Index">Proiecte</a></li>
        <li class="breadcrumb-item active" aria-current="page">Adauga Proiect</li>
    </ol>
</nav>

     <div class="row ">
         <div class="col-lg-3"></div>
         <div class="col-lg-6 col-sm-12">
             @if (TempData["ErrorMessage"] != null)
             {
                 <div class="alert alert-danger mt-2 mb-2" role="alert">
                      @TempData["ErrorMessage"] 
                 </div>

             }

             <div class="card text-white mb-3">
                 <div class="card-header text-center bg-success">Adauga Proiect</div>
                 <div class="card-body text-center">
                     <form method="post" asp-action="Create">
                         <input type="text" class="form-control" asp-for="Name" placeholder="Nume proiect.." />
                         <input type="submit" class="btn btn-block btn-outline-dark mt-2" value="Adauga" />
                     </form>
                 </div>
             </div>
         </div>
         <div class="col-lg-3"></div>
     </div>


