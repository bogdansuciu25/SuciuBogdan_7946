@model IEnumerable<SuciuBogdan_7946.Models.Project>
@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panou Control</a></li>
        <li class="breadcrumb-item active" aria-current="page">Proiecte</li>
    </ol>
</nav>



<div class="row">
    
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-sm-12">

        @if (TempData["Message"] != null)
        {
        <div class="alert alert-success mt-2 mb-2" role="alert">
            Proiectul @TempData["Message"] a fost creat cu succes
        </div>
            
        }


        <div class="card text-white mb-3">
            <div class="card-header text-center bg-dark">Proiecte  Curente</div>
            <div class="card-body text-center">
                <a class="btn btn-block btn-outline-dark" asp-controller="Project" asp-action="Create"><i class="fas fa-plus"></i> Adauga Proiect</a>
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped mt-2">
                        <thead>
                            <tr>
                                <th>Nume Proiect</th>
                                <th>Actiuni</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <td>@project.Name</td>
                                    <td>
                                        <a asp-controller="Project" asp-route-Id="@project.Id" asp-action="Edit" class="btn btn-info p-2"><i class="fas fa-edit"></i> Editeaza</a>
                                        <a asp-controller="Project" asp-route-Id="@project.Id" asp-action="Delete" class="btn btn-danger p-2"><i class="fas fa-trash"></i> Sterge</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Nu exista nici un proiect</p>
                }

            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>

