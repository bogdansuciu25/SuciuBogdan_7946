@model SuciuBogdan_7946.Models.Pages
@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panou Control</a></li>
        <li class="breadcrumb-item"><a asp-controller="Page" asp-action="Index">Pagini</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sterge Pagina</li>
    </ol>
</nav>

<div class="row ">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-sm-12">

        <div class="card text-white mb-3">
            <div class="card-header text-center bg-danger">Sterge Pagina</div>
            <div class="card-body text-center">
                <div class="alert alert-danger mt-2 mb-2" role="alert">
                    Vrei sa stergi pagina @Model.Name ?
                </div>

                <form method="post" asp-action="DeletePage">
                    <input class="form-control" type="text" asp-for="Name" disabled />
                    <input type="hidden" asp-for="Id" />
                    <select class="form-control mt-2" asp-for="ProjectId" asp-items="ViewBag.Projects" disabled>
                        <option value="">Alege Proiectul</option>
                    </select>
                    <input type="submit" class="btn btn-block btn-outline-dark mt-2" value="Sterge" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>



