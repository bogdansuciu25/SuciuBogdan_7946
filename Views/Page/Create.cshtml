@model SuciuBogdan_7946.Models.Pages

@{
    ViewData["Title"] = "Create";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panou Control</a></li>
        <li class="breadcrumb-item"><a asp-controller="Page" asp-action="Index">Pagini</a></li>
        <li class="breadcrumb-item active" aria-current="page">Adauga Pagina</li>
    </ol>
</nav>

<div class="row ">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-sm-12">

        <div class="card text-white mb-3">
            <div class="card-header text-center bg-success">Adauga Pagina</div>
            <div class="card-body text-center">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-2 mb-2" role="alert">
                        @TempData["ErrorMessage"]
                    </div>

                }

                <form method="post" asp-action="Create">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Nume Pagina.." />
                    <select class="form-control mt-2" asp-for="ProjectId" asp-items="ViewBag.Projects">
                        <option value="">Alege Proiectul</option>
                    </select>
                    <input type="submit" class="btn btn-block btn-outline-dark mt-2" value="Adauga" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>


