@model IEnumerable<SuciuBogdan_7946.Models.Pages>
@{
    ViewData["Title"] = "Pagini";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panou Control</a></li>
        <li class="breadcrumb-item active" aria-current="page">Pagini</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-sm-12">
        <div class="card text-white mb-3">
            <div class="card-header text-center bg-dark">Pagini  Curente</div>
            <div class="card-body text-center">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-2 mb-2" role="alert">
                        @TempData["ErrorMessage"]
                    </div>

                }
                <a class="btn btn-block btn-outline-dark" asp-controller="Page" asp-action="Create"><i class="fas fa-plus"></i> Adauga Pagina</a>
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped mt-2">
                        <thead>
                            <tr>
                                <th>Nume Pagina</th>
                                <th>Nume Proiect</th>
                                <th>Actiuni</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Project.Name</td>
                                    <td>
                                        <a asp-controller="Page" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-info p-2"><i class="fas fa-edit"></i> Editeaza</a>
                                        <a asp-controller="Page" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger p-2"><i class="fas fa-trash"></i> Sterge</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Nu exista nici o pagina</p>
                }
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
